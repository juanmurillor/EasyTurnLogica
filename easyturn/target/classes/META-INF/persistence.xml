<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="easyturnPU"
        transaction-type="RESOURCE_LOCAL">
        
                    <class>com.easyturn.modelo.Usuarios</class>
                                <class>com.easyturn.modelo.Tipousuadmin</class>
                                <class>com.easyturn.modelo.Productrestaurantes</class>
                                <class>com.easyturn.modelo.Restaurante</class>
                                <class>com.easyturn.modelo.Tipousuario</class>
                                <class>com.easyturn.modelo.Administrativos</class>
                          
        <properties>
            <property name="hibernate.connection.driver_class"
                value="org.postgresql.Driver" />
             <property name="hibernate.connection.url"
                    value="jdbc:postgresql://127.0.0.1:5432/easyTurn" />
             <property name="hibernate.connection.username" value="postgres" />
             <property name="hibernate.connection.password" value="postgres" />
        </properties>
     
    </persistence-unit>
</persistence>
